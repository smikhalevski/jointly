{
  "name": "jointly",
  "version": "0.0.3",
  "description": "Run multiple processes in parallel.",
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "bin": {
    "jointly": "./bin/jointly.js"
  },
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc --project tsconfig.build.json && cp package.json README.md LICENSE.txt lib/ && cd lib && npm pkg delete scripts devDependencies && rimraf bin/mfml.d.ts && chmod +x bin/jointly.js",
    "clean": "rimraf lib docs coverage",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/jointly.git"
  },
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/jointly/issues"
  },
  "homepage": "https://github.com/smikhalevski/jointly#readme",
  "devDependencies": {
    "@types/node": "^24.7.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
